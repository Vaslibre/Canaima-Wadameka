<?xml version="1.0"?>

<JWM>

   <!-- Additional tray attributes: autohide, width, border, layer, layout -->
   <Tray  x="0" y="-1" height="26" autohide="true">

      <!-- Additional TrayButton attribute: label -->
      <TrayButton label="Inicio">root:1</TrayButton>

      	<TrayButton icon="preferences-desktop.png" popup="Clic para ocultar todas las ventanas">showdesktop</TrayButton>
	<TrayButton icon="file-manager.png" popup="Administrador de archivos">exec:thunar</TrayButton>
	<TrayButton icon="web-browser.png" popup="Navegador web Firefox">exec:iceweasel</TrayButton>
	<TrayButton icon="applications-multimedia.png" popup="Reproductor Multimedia">exec:vlc</TrayButton>
	<TrayButton icon="terminal.png" popup="Terminal">exec:fish</TrayButton>

      <!-- Additional Pager attribute: labeled -->
      <Pager labeled="true"/>

      <TaskList maxwidth="256"/>

      <Dock/>

      <!-- Additional Swallow attribute: height -->
      <Swallow name="xload" width="64">
         xload -nolabel -bg black -fg red -hl white
      </Swallow>

      <Clock format="%H:%M">xclock</Clock>

   </Tray>

</JWM>
